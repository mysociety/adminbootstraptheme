<% for t in body.tags %>
  <span class="label label-info tag">
    <% if t.value %>
      <a href="<%= admin_body_list_url %>?query=<%= h(t.name)%>"><%= h(t.name) %></a>:<a href="<%=list_public_bodies_url(:tag => t.name_and_value)%>"><%= h(t.value) %></a>
    <% else %>
        <a href="<%= admin_body_list_url %>?query=<%= h(t.name)%>"><%= h(t.name) %></a>
    <% end %>
  </span>
<% end %>



